# =============================================================================
# Clawdbot Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# --- Discord ---
DISCORD_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=

# --- Signal ---
SIGNAL_SERVICE_URL=http://signal-cli-rest-api:8080
SIGNAL_PHONE_NUMBER=+1234567890

# --- Web UI ---
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_SECRET_KEY=change-me
WEB_PASSWORD=change-me

# --- LLM Providers ---
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
OLLAMA_BASE_URL=http://ollama:11434
DEFAULT_MODEL=claude-sonnet-4-20250514

CAPSOLVER_API_KEY=CAP-...

# --- Email (Gmail) ---
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=you@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# --- Google Calendar ---
GOOGLE_CREDENTIALS_FILE=credentials/google_credentials.json
GOG_KEYRING_BACKEND=file
GOG_KEYRING_PASSWORD='1'
GOG_ACCOUNT='you@gmail.com'

GOOGLE_MAPS_API_KEY=AIza...

# --- WhatsApp ---
WHATSAPP_API_URL=http://whatsapp-bridge:3000

# --- Twilio (SMS) ---
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# --- Weather (Southern Ontario default) ---
WEATHER_DEFAULT_LAT=43.65
WEATHER_DEFAULT_LON=-79.38

# --- Voice ---
WHISPER_MODEL=base
TTS_VOICE=en-US-AriaNeural

# --- Database ---
DATABASE_URL=sqlite+aiosqlite:///data/clawdbot.db

GATEWAY_TOKEN=your-gateway-token
